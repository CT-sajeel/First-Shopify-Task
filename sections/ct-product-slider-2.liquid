{% schema %}
{
  "name": "Swiper2 Product Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slider Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Swiper2 Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
<div class="page-width isolate">
      <div class="swiper-section">
        {% if section.settings.heading != blank %}
          <h2 class="swiper-heading section-main-heading">{{ section.settings.heading }}</h2>
        {% endif %}

        <div class="swiper mySwiper">
          <div class="swiper-wrapper">
            {% assign products = collections[section.settings.collection].products %}
            {% for product in products %}
              <div class="swiper-slide">
                <div class="card-wrapper product-card-wrapper">
                  <div class="card card--media color-background-1 gradient" style="--ratio-percent: 125%;">
                    <div class="card__inner ratio" style="--ratio-percent: 125%;">
                      <div class="card__media">
                        
                          {% assign media = product.featured_media | default: product.media.first %}

                                  <a href="{{ product.url }}" class="link link-undecorated">
                                    {% if media and media.preview_image %}
                                      <img 
                                        src="{{ media.preview_image | img_url: '720x' }}"
                                        alt="{{ media.preview_image.alt | default: product.title | escape }}"
                                        class="swiper-product-image"
                                        loading="lazy"
                                      >
                                    {% elsif product.featured_image %}
                                      <img 
                                        src="{{ product.featured_image | img_url: '720x' }}"
                                        alt="{{ product.featured_image.alt | default: product.title | escape }}"
                                        class="swiper-product-image"
                                        loading="lazy"
                                      >
                                    {% else %}
                                      <img 
                                        src="{{ 'no-image.png' | asset_url }}"
                                        alt="{{ product.title | escape }}"
                                        class="swiper-product-image"
                                        loading="lazy"
                                      >
                                    {% endif %}
                                  </a>



                      </div>
                    </div>

                    <div class="card__content">
                      <div class="product__box-details">
                        <div class="product__title--price d-flex justify-between">
                          <div class="product__title">
                            <a href="{{ product.url }}" class="link link-undecorated">
                              <h3>{{ product.title }}</h3>
                            </a>
                            
                          </div>
                          <div class="product__price">
                            {{ product.price | money }}
                          </div>
                        </div>
                      </div>
                    </div>


                    <div class="product-block">
                    <div class="product-info">
                      <div class="product-title">{{ product.title }}</div>
                      <div class="product-reviews">
                        <div class="stars">
                          ★ ★ ★ ★ ★
                        </div>
                        <span>10 Reviews</span>
                      </div>
                    </div>
                    <div class="product-price">
                      <span style="font-size: 14px; margin-right: 2px;">$</span>{{ product.price | money }}
                    </div>
                  </div>

                    
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>



        </div>


                  {% comment %} Slider Arrow Buttons {% endcomment %}
            <div class="slider-button__mobile d-flex arrow-show align-center justify-center">
                <div class="slider-arrow-prev slider-arrow ">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 51.36 40.707" class="icon">
                    <g transform="translate(1 -1.953)">
                        <path data-name="Path 132" d="M323.214,1110.075h50" transform="translate(-324.214 -1087.769)" fill="none" stroke="#000" stroke-width="1"></path>
                        <path data-name="Path 133" d="M343.82,1102.348l20,20-20,20" transform="translate(-314.167 -1100.042)" fill="none" stroke="#000" stroke-width="1"></path>
                    </g>
                    </svg>
                </div>
                <div class="slider-arrow-next slider-arrow "><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 51.36 40.707" class="icon">
                    <g transform="translate(1 -1.953)">
                        <path data-name="Path 132" d="M323.214,1110.075h50" transform="translate(-324.214 -1087.769)" fill="none" stroke="#000" stroke-width="1"></path>
                        <path data-name="Path 133" d="M343.82,1102.348l20,20-20,20" transform="translate(-314.167 -1100.042)" fill="none" stroke="#000" stroke-width="1"></path>
                    </g>
                </svg>
                </div>
            </div>

      </div>
</div>
{% style%}
.swiper-section {
  padding: 20px;
}
.swiper-heading {
  text-align: center;
  margin-bottom: 20px;
}
.swiper-slide {
  width: auto;
}
.swiper-product-image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}
.swiper-slide {
  max-width: 240px; /* Keeps the slide compact like Lea Black’s */
} 
.swiper-product-image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}
@media (min-width: 768px) {
  .swiper-slide {
    max-width: 300px;
  }
}




#shopify-section-{{ section.id }} .slider-arrow-prev {
    left :0px;
}
#shopify-section-{{ section.id }}  .slider-arrow-next{ right :0px;}

#shopify-section-{{ section.id }} .swiper-slide {
  max-width: 100%;
}
#shopify-section-{{ section.id }}  .slider-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1000;
        }
#shopify-section-{{ section.id }} .slider-arrow svg {
    width: 50px;
    height: 40px;
}
#shopify-section-{{ section.id }}  .slider-arrow-prev svg {
    transform: rotate(180deg);

}   
@media screen and (max-width: 749px) {
#shopify-section-{{ section.id }}  .slider-button__mobile {
        gap: 20px;
        align-items: center;
        display: flex;
        justify-content: end;
 }
#shopify-section-{{ section.id }}  .slider-arrow{
    transform: unset !important;
    display: block !important;
    position: unset !important;
    height: 49px !important;
 }
}

.product-block {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-family: 'Poppins', sans-serif;
  padding: 20px;
  border-bottom: 1px solid #eee;
}

.product-info {
  max-width: 70%;
}

.product-title {
  font-size: 18px;
  color: #336;
  margin-bottom: 10px;
}

.product-reviews {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.product-reviews .stars {
  color: #32b6e5; /* star color */
  margin-right: 5px;
}

.product-price {
  font-size: 20px;
  font-weight: bold;
  color: #000;
  white-space: nowrap;
}
{% endstyle %}

{% javascript %}
var swiper = new Swiper(".mySwiper", {
  slidesPerView: 4,
  spaceBetween: 20,
  navigation: {
    nextEl: ".slider-arrow-next",
    prevEl: ".slider-arrow-prev",
  },
  breakpoints: {
    320: {
      slidesPerView: 1.2,
      spaceBetween: 10
    },
    768: {
      slidesPerView: 2.2,
      spaceBetween: 15
    },
    1024: {
      slidesPerView: 3,
      spaceBetween: 20
    }
  }
});
{% endjavascript %}
