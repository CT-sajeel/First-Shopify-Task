{% schema %}
{
  "name": "Swiper2 Product Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slider Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Swiper2 Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="swiper-section">
  {% if section.settings.heading != blank %}
    <h2 class="swiper-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% assign products = collections[section.settings.collection].products %}
      {% for product in products %}
        <div class="swiper-slide">
          <div class="card-wrapper product-card-wrapper">
            <div class="card card--media color-background-1 gradient" style="--ratio-percent: 125%;">
              <div class="card__inner ratio" style="--ratio-percent: 125%;">
                <div class="card__media">
                  
   {% assign media = product.featured_media | default: product.media.first %}

                  <a href="{{ product.url }}" class="link link-undecorated">
                   {% if media and media.preview_image %}
                        {%- assign widths = '165, 360, 535, 720, 940' -%}
                        {%- capture sizes -%}
                            (min-width: 1200px) calc((100vw - 130px) / 4),
                            (min-width: 990px) calc((100vw - 130px) / 4),
                            (min-width: 750px) calc((100vw - 120px) / 3),
                            calc((100vw - 35px) / 2)
                        {%- endcapture -%}
                        {{ media.preview_image 
                            | image_url: width: 940 
                            | image_tag: widths: widths, sizes: sizes, alt: media.preview_image.alt | default: product.title, loading: 'lazy', class: 'swiper-product-image' }}
                        {% elsif product.featured_image %}
                        {%- assign widths = '165, 360, 535, 720, 940' -%}
                        {%- capture sizes -%}
                            (min-width: 1200px) calc((100vw - 130px) / 4),
                            (min-width: 990px) calc((100vw - 130px) / 4),
                            (min-width: 750px) calc((100vw - 120px) / 3),
                            calc((100vw - 35px) / 2)
                        {%- endcapture -%}
                        {{ product.featured_image 
                            | image_url: width: 940 
                            | image_tag: widths: widths, sizes: sizes, alt: product.featured_image.alt | default: product.title, loading: 'lazy', class: 'swiper-product-image' }}
                        {% else %}
                          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
                  </a>



                </div>
              </div>
              <div class="card__content">
                <div class="product__box-details">
                  <div class="product__title--price d-flex justify-between">
                    <div class="product__title">
                      <a href="{{ product.url }}" class="link link-undecorated">
                        <h3>{{ product.title }}</h3>
                      </a>
                      
                    </div>
                    <div class="product__price">
                      {{ product.price | money }}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

{% stylesheet %}
.swiper-section {
  padding: 20px;
}
.swiper-heading {
  text-align: center;
  margin-bottom: 20px;
}
.swiper-slide {
  width: auto;
}
.swiper-product-image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}
.swiper-slide {
  max-width: 240px; /* Keeps the slide compact like Lea Blackâ€™s */
}
@media (min-width: 768px) {
  .swiper-slide {
    max-width: 300px;
  }
}
{% endstylesheet %}

{% javascript %}
var swiper = new Swiper(".mySwiper", {
  slidesPerView: 4,
  spaceBetween: 20,
  navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev",
  },
  breakpoints: {
    320: {
      slidesPerView: 1.2,
      spaceBetween: 10
    },
    768: {
      slidesPerView: 2.2,
      spaceBetween: 15
    },
    1024: {
      slidesPerView: 4,
      spaceBetween: 20
    }
  }
});
{% endjavascript %}
