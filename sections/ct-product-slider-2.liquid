
<div class="page-width isolate">
      <div class="swiper-section">
        {% if section.settings.heading != blank %}
          <h2 class="swiper-heading section-main-heading">{{ section.settings.heading }}</h2>
        {% endif %}

        <div class="swiper mySwiper">
          <div class="swiper-wrapper">
            {% comment %} Product data displaying in slider {% endcomment %}
            {% assign products = collections[section.settings.collection].products %}
            {% for product in products %}
              <div class="swiper-slide">
                <div class="card-wrapper product-card-wrapper">
                  <div class="card card--media color-background-1 gradient" >
                      {% render "ct-slider-image" , product : product %}
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
        {% comment %} Slider Arrow Buttons {% endcomment %}
        {% render "ct-slider-button" %}

      </div>
</div>


{% style%}
#shopify-section-{{ section.id }}{
    margin-top: 100px;
    margin-bottom: 100px;}
#shopify-section-{{ section.id }} .swiper-heading {
  text-align: center;
  margin-bottom: 20px;
}
#shopify-section-{{ section.id }} .swiper-slide {
  width: auto;
}
#shopify-section-{{ section.id }} .swiper-product-image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}
#shopify-section-{{ section.id }} .swiper-slide {
  max-width: 240px; /* Keeps the slide compact like Lea Blackâ€™s */
} 
#shopify-section-{{ section.id }} .swiper-product-image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}

#shopify-section-{{ section.id }} .slider-arrow-prev {
    left :0px;
}
#shopify-section-{{ section.id }}  .slider-arrow-next{ right :0px;}

#shopify-section-{{ section.id }} .swiper-slide {
  max-width: 100%;
}
#shopify-section-{{ section.id }}  .slider-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1000;
        }
#shopify-section-{{ section.id }} .slider-arrow svg {
    width: 50px;
    height: 40px;
}
#shopify-section-{{ section.id }}  .slider-arrow-prev svg {
    transform: rotate(180deg);

}   

#shopify-section-{{ section.id }} .product-block {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-family: 'Poppins', sans-serif;
  padding: 20px;
}

#shopify-section-{{ section.id }} .product-info {
  max-width: 70%;
}

#shopify-section-{{ section.id }} .product-title {
  font-size: 18px;
  color: #336;
  margin-bottom: 10px;
}

#shopify-section-{{ section.id }} .product-reviews {
  display: flex;
  align-items: center;
  font-size: 14px;
}

#shopify-section-{{ section.id }} .product-reviews .stars {
  color: #32b6e5; /* star color */
  margin-right: 5px;
}

#shopify-section-{{ section.id }} .product-price {
  font-size: 20px;
  font-weight: bold;
  color: #000;
  white-space: nowrap;
}

@media screen and (max-width: 749px) {
  #shopify-section-{{ section.id }}{
    margin-top: 60px;
    margin-bottom: 60px;}
#shopify-section-{{ section.id }}  .slider-button__mobile {
        gap: 20px;
        align-items: center;
        display: flex;
        justify-content: end;
 }
#shopify-section-{{ section.id }}  .slider-arrow{
    transform: unset !important;
    display: block !important;
    position: unset !important;
    height: 49px !important;
 }
  #shopify-section-{{ section.id }} .swiper-slide {
    max-width: 300px;
  }
}
{% endstyle %}

{% javascript %}
var swiper = new Swiper(".mySwiper", {
  slidesPerView: 4,
  spaceBetween: 20,
  navigation: {
    nextEl: ".slider-arrow-next",
    prevEl: ".slider-arrow-prev",
  },
  breakpoints: {
    320: {
      slidesPerView: 1.2,
      spaceBetween: 10
    },
    768: {
      slidesPerView: 2.2,
      spaceBetween: 15
    },
    1024: {
      slidesPerView: 3,
      spaceBetween: 20
    }
  }
});
{% endjavascript %}
{% schema %}
{
  "name": "CT Product Slide",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slider Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "CT Product Slide",
      "category": "Custom"
    }
  ]
}
{% endschema %}
