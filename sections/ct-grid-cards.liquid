{% schema %}
{
  "name": "Custom Image with Text",
  "tag": "section",
  "class": "custom-image-text-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your Subheading Here"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    }
  ],
  "presets": [
    {
      "name": "Custom Image with Text",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

{% style %}
.custom-image-text-section {
  background-color: {{ section.settings.background_color }};
  padding: 50px 20px;
}

.custom-image-text-wrapper {
  display: flex;
  flex-direction: row;
  gap: 40px;
  align-items: center;
  justify-content: center;
  max-width: 1200px;
  margin: 0 auto;
}

.custom-image-text-image {
  flex: 1;
}

.custom-image-text-content {
  flex: 1;
}

.custom-image-text-content h2 {
  font-size: 2rem;
  margin-bottom: 15px;
}

.custom-image-text-content p {
  font-size: 1.2rem;
  margin-bottom: 25px;
}

.custom-image-text-content a {
  display: inline-block;
  background-color: #000;
  color: #fff;
  padding: 12px 24px;
  text-decoration: none;
  border-radius: 4px;
}

@media screen and (max-width: 768px) {
  .custom-image-text-wrapper {
    flex-direction: column;
    text-align: center;
  }

  .custom-image-text-content a {
    margin-top: 20px;
  }
}
{% endstyle %}

<div class="custom-image-text-wrapper">
  {% if section.settings.image %}
    <div class="custom-image-text-image">
      <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.heading | escape }}" style="width: 100%; height: auto;">
    </div>
  {% endif %}

  <div class="custom-image-text-content">
    {% if section.settings.heading %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.button_text and section.settings.button_link %}
      <a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>
