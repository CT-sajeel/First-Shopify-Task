{% schema %}
{
  "name": "Skin Needs Grid",
  "tag": "section",
  "class": "skin-needs-section",
  "settings": [],
  "blocks": [
    {
      "type": "need",
      "name": "Skin Need Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Skin Concern"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Skin Needs Grid",
      "blocks": []
    }
  ]
}
{% endschema %}

{% stylesheet %}
.skin-needs-section {
  padding: 40px 20px;
}

.skin-needs-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
}

.skin-need-block {
  background-color: #fff;
  text-align: left;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.skin-need-image {
  width: 100%;
  text-align: center;
  margin-bottom: 15px;
}

.skin-need-image img {
  width: 100%;
  max-height: 180px;
  object-fit: contain;
  display: block;
  margin: 0 auto;
}

.skin-need-block .content {
  padding: 20px;
}

.skin-need-block h3 {
  font-size: 1.1rem;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 10px;
}

.skin-need-block p {
  color: #444;
  font-size: 1rem;
  margin-bottom: 15px;
}

.skin-need-block a {
  font-weight: bold;
  color: #000;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 5px;
}

.skin-need-block a:hover {
  text-decoration: underline;
}

@media screen and (max-width: 749px) {
  .skin-needs-grid {
    grid-template-columns: 1fr;
    gap: 25px;
  }
}
{% endstylesheet %}

<div class="skin-needs-section">
  <div class="skin-needs-grid">
    {% for block in section.blocks %}
      <div class="skin-need-block">
        <div class="skin-need-image">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 600 }}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
            >
          {% else %}
            {{ 'image' | placeholder_svg_tag }}
          {% endif %}
        </div>
        <div class="content">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">SHOP NOW â†’</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
