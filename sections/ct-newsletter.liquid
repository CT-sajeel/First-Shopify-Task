{%- endcomment -%}  


{% style %}
#shopify-section-{{ section.id }} .ct-newsletter-section {
  padding: 60px 80px;
  color: white;
  background-color: #3aaac9;
  background-size: cover;
  background-position: center;
}

#shopify-section-{{ section.id }} .custom-newsletter-inner {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
}

#shopify-section-{{ section.id }} .custom-newsletter-text {
  flex: 1 1 35%;
}

#shopify-section-{{ section.id }} .custom-newsletter-text h2 {
  font-weight: 600;
  color: #ffffff;
  font-size: 50px;
  line-height: 55px;
}

#shopify-section-{{ section.id }} .custom-newsletter-text p {
  font-size: 18px;
  margin-bottom: 20px;
}

#shopify-section-{{ section.id }} .custom-newsletter-form {
  display: flex;
  flex: 1 1 55%;
  gap: 10px;
  flex-wrap: wrap;
}

#shopify-section-{{ section.id }} .custom-newsletter-form input[type="email"] {
  padding: 20px;
  border: none;
  border-radius: 10px;
  font-size: 18px;
  flex: 1 1 auto;
  min-width: 200px;
}

#shopify-section-{{ section.id }} .custom-newsletter-form button {
  background-color: black;
  color: white;
  border: none;
  padding: 20px 30px;
  font-weight: bold;
  font-size: 16px;
  border-radius: 50px;
  cursor: pointer;
  white-space: nowrap;
}

@media screen and (max-width: 749px) {
  #shopify-section-{{ section.id }} .ct-newsletter-section {
  padding: 60px 15px;
   }  
  #shopify-section-{{ section.id }} .custom-newsletter-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  #shopify-section-{{ section.id }} .custom-newsletter-text h2 {
    font-size: 40px;
    margin-bottom: 0px;
  }

  #shopify-section-{{ section.id }} .custom-newsletter-text,
  #shopify-section-{{ section.id }} .custom-newsletter-form {
    width: 100%;
  }

  #shopify-section-{{ section.id }} .custom-newsletter-form {
    flex-direction: column;
  }

  #shopify-section-{{ section.id }} .custom-newsletter-form input[type="email"],
  #shopify-section-{{ section.id }} .custom-newsletter-form button {
    width: 100%;
  }
}
{% endstyle %}

<section
  class="ct-newsletter-section"
  {% if section.settings.background_image != blank %}
    style="background-image: url({{ section.settings.background_image | image_url }});"
  {% endif %}
>
  <div class="custom-newsletter-inner">
    <div class="custom-newsletter-text">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <form class="custom-newsletter-form" method="post" action="{{ routes.newsletter_subscribe_url }}">
      <p>{{ section.settings.subtext }}</p>
      <input type="hidden" name="form_type" value="customer">
      <input type="email" name="contact[email]" placeholder="Email Address" required>
      <button type="submit">{{ section.settings.button_text }}</button>
    </form>
  </div>
</section>
{% schema %}
{
  "name": "CT Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Be the first to know about new collections and exclusive offers."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ],
  "presets": [
    {
      "name": "CT Newsletter",
      "category": "Custom"
    }
  ]
}
{% endschema %}