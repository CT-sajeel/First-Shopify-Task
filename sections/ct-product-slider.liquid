{% stylesheet %}
.swiper-section {
  padding: 20px;
}
.swiper-heading {
  text-align: center;
  margin-bottom: 20px;
}
.mySwiper {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  overflow: hidden;
}
.swiper-wrapper {
  display: flex !important; /* Required for Swiper */
}

.swiper-slide {
  width: auto; /* Swiper handles this based on slidesPerView */
  flex-shrink: 0; /* Prevent squishing */
}
{% endstylesheet %}

<script>

  new Swiper('.mySwiper', {
    direction: 'horizontal',
    loop: false,
    spaceBetween: 20,
    slidesPerView: 1.2, // Small screens

    breakpoints: {
      0: {
        slidesPerView: 1.2
      },
      600: {
        slidesPerView: 2
      },
      990: {
        slidesPerView: 3 // Show exactly 3 on desktop
      }
    },
    navigation: {
      nextEl: '.slider-arrow-next',
      prevEl: '.slider-arrow-prev'
    }
  });
</script>
