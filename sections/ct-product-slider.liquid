{% schema %}
{
  "name": "Swiper Product Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slider Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Swiper Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="swiper-section">
  {% if section.settings.heading != blank %}
    <h2 class="swiper-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% assign products = collections[section.settings.collection].products %}
      {% for product in products %}
        <div class="swiper-slide">
          <div class="card-wrapper product-card-wrapper">
            <div class="card card--media color-background-1 gradient" style="--ratio-percent: 125%;">
            {% comment %}  <div class="card__inner ratio" style="--ratio-percent: 125%;">
                <div class="card__media">
                  <a href="{{ product.url }}" class="link link-undecorated">
                   
                   
                    <div class="image-with-text__media-item _grid__item">
                    <div
                        class="image-with-text__media image-with-text__media--adapt global-media-settings
                        {% if product.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}"
                        {% if product.image != blank %}
                        style="padding-bottom: {{ 1 | divided_by: product.image.aspect_ratio | times: 100 }}%;"
                        {% endif %}
                    >
                        {% if product.image != blank %}
                        {% assign widths = '165, 360, 535, 750, 1070, 1500' %}
                        {% capture sizes %}
                            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 3 }}px,
                            (min-width: 750px) calc((100vw - 130px) / 3),
                            calc((100vw - 50px) / 1)
                        {% endcapture %}
                        {{
                            product.image
                            | image_url: width: 1500
                            | image_tag: sizes: sizes, widths: widths, alt: product.title
                        }}
                        {% else %}
                        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
                    </div>
                    </div>


                  </a>
                </div>
              </div> {% endcomment %}
              <div class="card__content">
                <div class="product__box-details">
                  <div class="product__title--price d-flex justify-between">
                    <div class="product__title">
                      <a href="{{ product.url }}" class="link link-undecorated">
                        <h3>{{ product.title }}</h3>
                      </a>
                      123344 {%comment %} {% render 'star-rating', product: product %} {% endcomment %} 
                    </div>
                    <div class="product__price">
                      {{ product.price | money }}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

{% stylesheet %}
.swiper-section {
  padding: 20px;
}
.swiper-heading {
  text-align: center;
  margin-bottom: 20px;
}
.swiper-slide {
  width: auto;
}
{% endstylesheet %}
   {% comment %}
{% javascript %}
var swiper = new Swiper(".mySwiper", {
  slidesPerView: 4,
  spaceBetween: 20,
  navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev",
  },
  breakpoints: {
    320: {
      slidesPerView: 1.2,
      spaceBetween: 10
    },
    768: {
      slidesPerView: 2.2,
      spaceBetween: 15
    },
    1024: {
      slidesPerView: 4,
      spaceBetween: 20
    }
  }
});
{% endjavascript %}
