{% style %}
#shopify-section-{{ section.id }} .custom-features {
  background: linear-gradient(to right, #ffffff, #eaf9fd);
  padding: 40px 80px;
}

#shopify-section-{{ section.id }} .custom-features .features-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

#shopify-section-{{ section.id }} .custom-features .feature-block {
  text-align: left;
  font-family: inherit;
  margin-bottom: 40px;
}

#shopify-section-{{ section.id }} .custom-features .feature-block .svg-icon {
  height: 40px;
  margin-bottom: 15px;
}

#shopify-section-{{ section.id }} .custom-features .feature-block h4 {
    font-size: 16px;
    line-height: 24px;
    font-weight: 700;
    margin-bottom: 10px;
}

#shopify-section-{{ section.id }} .custom-features .feature-block p {
    font-size: 16px;
    margin: 0;
    line-height: 24px;
}

/* Mobile styles */
@media screen and (max-width: 749px) {
  #shopify-section-{{ section.id }} .custom-features .features-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  #shopify-section-{{ section.id }} .custom-features {
    padding: 30px 15px;
  }
}
{% endstyle %}

<div class="custom-features">
  <div class="features-grid">
    {% for block in section.blocks %}
      <div class="feature-block">
        <div class="svg-icon">
          {{ block.settings.icon_svg }}
        </div>
        <h4>{{ block.settings.title }}</h4>
        <p>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "CT Trust Badges",
  "tag": "section",
  "class": "ct-custom-features",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "SVG Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "CT Trust Badges",
      "blocks": []
    }
  ]
}
{% endschema %}